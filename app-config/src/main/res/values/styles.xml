<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>


    <style name="AppText">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="BaseTextView" parent="AppText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BaseButton" parent="AppText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="BaseButton.Primary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/common_text_15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BaseEditText" parent="AppText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_edit_text_text_size</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="GuideLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="GuideLine.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="GuideLine.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DividerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DividerView.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="DividerView.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="BaseEditText.InputText">
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/common_text_18sp</item>
    </style>

    <style name="BaseButton.PrimaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>